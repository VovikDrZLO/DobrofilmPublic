<Window x:Class="Dobrofilm.CategoryItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="263" Width="300" KeyDown="CategoryItemWindow_KeyDown" Icon="Resources/MainIcon.ico" ResizeMode="NoResize">
    <Canvas HorizontalAlignment="Left" Height="229" VerticalAlignment="Top" Width="292">
        <Image x:Name ="CategoryIcon"  Height="65" Canvas.Left="19" Canvas.Top="19" Width="65" MouseLeftButtonDown="Insert_Image" Source="/Dobrofilm;component/Resources/BaseImage.jpg" />
        <TextBox x:Name="CategoryName" Canvas.Left="117" TextWrapping="Wrap" Text="Name" Canvas.Top="35" Height="23" Width="121"/>
        <TextBox x:Name="CategoryHint" Height="85" Canvas.Left="10" TextWrapping="Wrap" Text="Hint" Canvas.Top="102" Width="272"/>
        <Button Content="Ok" Canvas.Left="117" Canvas.Top="197" Width="75" Click="Button_OK_Click"/>
        <Button Content="Calcel" Canvas.Left="207" Canvas.Top="197" Width="75" Click="Button_Cancel_Click"/>
        <Label x:Name="ProfileNameLable" Content="Default" Canvas.Left="117" Canvas.Top="4" Width="121"/>
    </Canvas>    
</Window>
