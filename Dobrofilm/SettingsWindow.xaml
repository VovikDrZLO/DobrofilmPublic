<Window x:Name="SettingsWindow1" x:Class="Dobrofilm.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="531" Width="497" KeyDown="SettingsWindow1_KeyDown" Icon="Resources/MainIcon.ico" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="SecretButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="White">
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="0"
                            Padding="0" 
                            BorderBrush="DarkGray" 
                            CornerRadius="2" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Canvas Margin="0,0,0,13">
        <TextBox x:Name="CategotyPathTB" Height="23" Canvas.Left="171" TextWrapping="Wrap" Text="CategotyPath" Canvas.Top="20" Width="300"/>
        <TextBox x:Name="FilmPathTB" Height="23" Canvas.Left="171" TextWrapping="Wrap" Text="FilmsPath" Canvas.Top="59" Width="300"/>
        <TextBox x:Name="MPCRath" Width="300" Canvas.Left="171" Canvas.Top="244" TextWrapping="Wrap"/>
        <TextBox x:Name="CategoryNextIDTB" Height="24" Canvas.Left="171" TextWrapping="Wrap" Text="NextCategoryID" Canvas.Top="174" Width="120" />
        <TextBox x:Name="FilmNextIDTB" Height="24" Canvas.Left="171" TextWrapping="Wrap" Text="NextFilmID" Canvas.Top="360" Width="120"/>
        <TextBox x:Name="FilmMaskTB" Height="24" Canvas.Left="171" TextWrapping="Wrap" Text="FilmMask" Canvas.Top="319" Width="120"/>
        <TextBox x:Name="LinkPath" Height="24" Canvas.Left="171" TextWrapping="Wrap" Text="LinkPath" Canvas.Top="100" Width="300"/>
        <TextBox x:Name="ScreenPath" Height="24" Canvas.Left="171" TextWrapping="Wrap" Text="ScreenPath" Canvas.Top="137" Width="300"/>
        <Button Content="Delete Marked Films" Canvas.Left="20" Canvas.Top="418" Width="115" Click="DelMarkedFilmsBtn_Click" Height="23"/>
        <Button Content="Ok" Canvas.Left="299" Canvas.Top="457" Width="75" Click="OKBtn_Click" Height="23"/>
        <Button Content="Cancel" Canvas.Left="396" Canvas.Top="457" Width="75" Click="CancelBtn_Click" Height="23"/>
        <Label Content="CategoryDictXMLFilePath" Canvas.Left="10" Canvas.Top="20" Height="26" Width="147"/>
        <Label Content="LinkXMLFilePath" Canvas.Left="10" Canvas.Top="100" Height="26" Width="147"/>
        <Label Content="FilmDictXMLFilePath" Canvas.Left="10" Canvas.Top="59" Width="147" Height="26"/>
        <Label Content="ScreensXMLFilePath" Canvas.Left="10" Canvas.Top="137" Width="147" Height="26"/>
        <Label Content="CategoryDictNextID" Canvas.Left="10" Canvas.Top="174" Height="27" Width="147"/>
        <Label Content="FilmMask" Canvas.Left="10" Canvas.Top="320" Height="28" Width="147" />
        <Label Content="FilmMaskNextID" Canvas.Left="10" Canvas.Top="360" Width="147" Height="27"/>
        <GroupBox Header="ForAutoFileNameGeneration" Height="106" Canvas.Left="10" Canvas.Top="298" Width="447"/>
        <Label Content="Path to MPC" Canvas.Left="10" Canvas.Top="243" Width="147"/>
        <Button x:Name="SecretButton" Canvas.Left="10" Canvas.Top="274" Width="25" Height="25" BorderBrush="White" Foreground="White"
                Click="SecretButton_Click" MouseEnter="SecretButton_MouseEnter" 
                MouseLeave="SecretButton_MouseLeave" Style="{StaticResource SecretButtonStyle}"/>
        <TextBox x:Name="DefBrowserTB" Height="23" Canvas.Left="171" TextWrapping="Wrap" Text="explorer.exe" Canvas.Top="209" Width="300"/>
        <Label Content="Default Browser" Canvas.Left="10" Canvas.Top="209" Width="147"/>
        <GroupBox Height="40" Canvas.Left="10" Canvas.Top="409" Width="447"/>
        <Button Content="Move All Films" Canvas.Left="150" Canvas.Top="419" Width="83" Click="MoveAllFilms_Click"/>
        <Button Content="Del forgotten films" ToolTip="Delete all decripted files" Canvas.Left="245" Canvas.Top="419" Width="113" Click="DelForgottenFilms_Click"/>
    </Canvas>
</Window>
